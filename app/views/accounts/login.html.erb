<% less_form_for @user, :url => login_path, :method => :post do |f| %>

<div id="login_form">
  <h1><%= t 'Log-in your Account' %></h1>

  <div class="instruction">
    <%= link_to t("Oops, I need an account!"), signup_url  %>
  </div>

  <%= f.text_field :login, :label => t("login"),:class => "focus_first" %>
  <%= f.password_field :password,:label => t("password") %>
  <%= f.wrap(:remember_me, :for => :remember_me,:label => t("remember_me")){ check_box_tag 'remember_me',1,false, :class=>"checkbox" } %>

  <div class="button">
    <%= f.submit t('Log-in Now'), :class=>'button' %>
  </div>

</div>

<div class="instruction">
  <span><%= t "I forgot my" %><a href="javascript:void(0);" id="forgot_password_clicker" style="display: inline;"><%= t "password" %></a></span>
</div>

<div id="forgot_form" class="hidden">	
  <h1><%= t 'Retrieve My Password' %></h1>
  <div class="instruction"><%= t 'Enter email address and your password will be sent to you' %></div>
  <div id="forgot_password">
    <%= f.text_field :email, :label => t("Enter Email Address") %>
  </div>
  <div class="button">
    <%= f.submit t('Retrieve Password'), :class => 'button' %>
  </div>
</div>
<% end %>




<script type="text/javascript" charset="utf-8">
//<![CDATA[
jQuery(function(){
  tog("#forgot_password_clicker", "#login_form");
  tog("#forgot_password_clicker", "#forgot_form", forgot_text);

});
function forgot_text(){
  if (jQuery("#forgot_text").html() == "forgot")
  jQuery("#forgot_text").html("remember");
  else
  jQuery("#forgot_text").html("forgot");

}
//]]>
</script>